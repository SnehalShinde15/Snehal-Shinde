<section class="image-grid">
  <h2>{{ section.settings.heading }}</h2>

  <div class="grid">
    {% for block in section.blocks %}
      <div class="grid-item">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url }}"
            alt="{{ block.settings.text | escape }}"
            loading="lazy"
          >
        {% endif %}
        {% if block.settings.text != blank %}
          <p>{{ block.settings.text }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
.image-grid {
  padding: 60px 40px;
  text-align: center;
}

.image-grid h2 {
  font-size: 36px;
  margin-bottom: 40px;
}

/* ✅ DESKTOP: 3 columns → 2 rows when 6 images */
.grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 24px;
  max-width: 1200px;
  margin: 0 auto;
}

.grid-item {
  width: 100%;
}

.grid-item img {
  width: 100%;
  height: 280px;
  object-fit: cover;
  display: block;
}

.grid-item p {
  margin-top: 8px;
  font-size: 14px;
}

/* ✅ MOBILE: 1 image per row */
@media (max-width: 768px) {
  .grid {
    grid-template-columns: 1fr;
  }

  .image-grid h2 {
    font-size: 24px;
  }

  .grid-item img {
    height: 220px;
  }
}
</style>

{% schema %}
{
  "name": "Image Grid Wild",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tisso vision in the wild"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Caption"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Image Grid Wild"
    }
  ]
}
{% endschema %}
