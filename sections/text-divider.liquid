<section class="divider">
  <p class="divider-text">{{ section.settings.text }}</p>
</section>

<style>
.divider {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24px 16px;
}

.divider-text {
  text-align: center;
  font-size: 12px;
  letter-spacing: 1.2px;
  text-transform: uppercase;
  max-width: 900px;
}
</style>

{% schema %}
{
  "name": "Text Divider",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    { "name": "Text Divider" }
  ]
}
{% endschema %}
