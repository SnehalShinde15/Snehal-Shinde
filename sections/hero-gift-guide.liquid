<section
  class="hero-gift-guide"
  style="
    {% if section.settings.bg_image %}
      background-image: url({{ section.settings.bg_image | image_url }});
      background-size: cover;
      background-position: center;
    {% else %}
      background-color: #f4f4f4;
    {% endif %}
  "
>
  <div class="hero-content">
    {% if section.settings.title != blank %}
      <h1>{{ section.settings.title }}</h1>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p>{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="hero-btn"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  .hero-gift-guide {
    min-height: 420px;
    display: flex;
    align-items: center;
    padding: 60px 40px;
  }

  .hero-content {
    max-width: 600px;
    background: rgba(255, 255, 255, 0.85);
    padding: 32px;
    border-radius: 8px;
  }

  .hero-content h1 {
    font-size: 42px;
    margin-bottom: 16px;
  }

  .hero-content p {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .hero-btn {
    display: inline-block;
    background: #000;
    color: #fff;
    padding: 12px 28px;
    text-decoration: none;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .hero-gift-guide {
      padding: 40px 20px;
    }

    .hero-content h1 {
      font-size: 32px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Gift Guide",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover joy with our curated holiday gift collection."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Gift Guide"
    }
  ]
}
{% endschema %}
