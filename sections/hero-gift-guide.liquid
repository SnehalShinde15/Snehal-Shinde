<section class="hero-gift-guide">
  <div class="hero-inner">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-btn">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.hero-gift-guide {
  padding: 80px 20px;
  text-align: center;
  background: #f5f2ee;
}
.hero-gift-guide h1 {
  font-size: 40px;
}
.hero-gift-guide p {
  font-size: 18px;
  margin: 15px 0;
}
.hero-btn {
  display: inline-block;
  margin-top: 20px;
  padding: 12px 24px;
  background: black;
  color: white;
  text-decoration: none;
}
</style>

{% schema %}
{
  "name": "Hero Gift Guide",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Gift Guide"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Perfect gifts for everyone"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Gift Guide"
    }
  ]
}
{% endschema %}
