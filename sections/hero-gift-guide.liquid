<section class="hero">
  <div class="hero-content">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.button_link }}" class="hero-btn">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

<style>
.hero {
  background: #f5f5f5;
  padding: 80px 40px;
}
.hero-content {
  max-width: 600px;
}
.hero h1 {
  font-size: 48px;
  margin-bottom: 20px;
}
.hero p {
  font-size: 16px;
  margin-bottom: 30px;
}
.hero-btn {
  display: inline-block;
  padding: 12px 24px;
  background: #000;
  color: #fff;
  text-decoration: none;
}
</style>

{% schema %}
{
  "name": "Hero Gift Guide",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    { "name": "Hero Gift Guide" }
  ]
}
{% endschema %}
